/* miniprogram/pages/choiceQuestion/choiceQuestion.wxss */

.container {
    position: absolute;
}

.questionTitle {
  margin-top: 10px;
  padding: 15px;
  padding-top: 25px;
}

  .answer_bar {
    margin-top: 60px;
    position: relative;
    width: 100%;
  }

  .your_answer_title {
    position: absolute;
    left: 20px;
  }

  .your_answer_choice {
    position: absolute;
    left: 90px;
  }
  
  .answer_title {
    position: absolute;
    left: 120px;
  }

  .answer_choice {
    position: absolute;
    left: 190px;
  }

  .options {
    position: relative;
    margin-top: 30px;
    width: 100%;
  }

  .submitAnswer {
    position: absolute;
    width: 100%;
    border: 2px solid #70bcf6; 
  border-radius: 2px;  
  background-color: white;
    text-align: center;
  }


  .modals {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }
   
  /*动画前初始位置*/
   
  .bottom-pos {
    position: absolute;
    z-index: 1;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 30rpx;
    height: 300rpx;
    background-color: #FF0000;
    -webkit-transform: translateY(100%);
    transform: translateY(100%);
  }

  .currentIndex {
    position: absolute;
    left: 10px;
    background-color: #00bfff;
    width: fit-content;
  }

  .tabView {
    position: relative;
    width: 100%;
  }

  .typeView {
    position: absolute;
    left: 10px;
    border: 1px solid #70bcf6; 
    background-color: white;
    width: fit-content;
  }

  .diffView {
    position: absolute;
    left:70px;
    border: 1px solid #70bcf6; 
    background-color: white;
    width: fit-content;
  }

  .btnView{
    position: absolute;
    right:5px;
    width: fit-content;
  }

  .delete_icon {
    position: absolute;
    right:20px;
    width: 20px;
  }

  .daojishi {
    position: absolute;
    left: 120px;
    top: -25px;
    width: 50px;
    height: 27px;
  }

  .radio-group {
    width: 95%;
  }

  .radio {
    display: list-item;
  }

  .contentView{
    width: 100%;
    margin-top: 40rpx;
  }
  .textarea_title{
    margin-left: 20rpx;
    color: gray
  }
  .textarea_bg{
    padding: 0 25rpx;
    margin: 5px;
    border: 2px solid #70bcf6; 
    border-radius: 2px;  
    background-color: white;
  }
  textarea{
    width: 700rpx;
    padding: 25rpx 0;
  } 

  .checkbox-group {
    width: 90%;
    padding : 20px;
  }

  .flex-wrap{
    display:flex;
    flex-direction: row;
    background-color: #FFFFFF;
    flex-wrap: wrap;
    justify-content: flex-start
  }
